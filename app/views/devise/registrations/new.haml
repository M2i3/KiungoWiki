= title(t('devise.registrations.new_header'))

.row
  .span12
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages! 
      %dl
        %dt= f.label :nickname 
        %dd= f.text_field :nickname

        %dt= f.label :email 
        %dd= f.email_field :email

        %dt= f.label :password 
        %dd= f.password_field :password

        %dt= f.label :password_confirmation
        %dd= f.password_field :password_confirmation

      = f.submit t('devise.registrations.new_header'), class: "btn btn-primary"

.row
  .span12
    = render partial: "devise/shared/links" 
